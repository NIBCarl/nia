{
  "memes_section": {
    "container": {
      "description": "The main container for the entire 'Memes' section.",
      "style": {
        "backgroundColor": "#FEFBF4",
        "width": "100%",
        "padding": "50px 0"
      }
    },
    "title": {
      "description": "The title for the section.",
      "text": "MEMES",
      "style": {
        "fontFamily": "Impact, 'Arial Black', sans-serif",
        "fontWeight": "bold",
        "fontSize": "42px",
        "color": "#8B0000",
        "textAlign": "center",
        "textTransform": "uppercase",
        "marginBottom": "30px"
      }
    },
    "gallery": {
      "description": "A horizontally scrolling container for the meme images.",
      "style": {
        "display": "flex",
        "overflowX": "auto",
        "padding": "10px 20px",
        "gap": "25px",
        "scrollbar": {
          "display": "none"
        }
      },
      "images": [
        {
          "id": "meme_01",
          "alt_text": "A cartoon bull with angel wings and a halo flying in the sky."
        },
        {
          "id": "meme_02",
          "alt_text": "A cartoon bull dressed as a viking warrior with armor, a shield, and an axe, standing in front of fire."
        },
        {
          "id": "meme_03",
          "alt_text": "An angry-looking cartoon bull wearing a dark suit."
        },
        {
          "id": "meme_04",
          "alt_text": "A cartoon bull facing off against a matador in a bullfighting arena."
        }
      ]
    },
    "image_card": {
      "description": "Styling for the individual cards that contain each meme image.",
      "style": {
        "flex": "0 0 auto",
        "width": "350px",
        "height": "350px",
        "border": "4px solid #8B0000",
        "borderRadius": "12px",
        "padding": "8px",
        "backgroundColor": "#FFFFFF",
        "boxShadow": "5px 5px 15px rgba(0, 0, 0, 0.1)"
      },
      "image": {
        "style": {
          "width": "100%",
          "height": "100%",
          "objectFit": "cover",
          "borderRadius": "8px"
        }
      }
    }
  }
}