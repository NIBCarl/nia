{
  "header_component": {
    "navbar": {
      "description": "The main container for the scrolling banner.",
      "style": {
        "backgroundColor": "#F9F900",
        "width": "100%",
        "height": "45px",
        "overflow": "hidden",
        "borderTop": "2px solid #0000FF",
        "borderBottom": "2px solid #0000FF",
        "display": "flex",
        "alignItems": "center"
      }
    },
    "animation_wrapper": {
      "description": "A container that holds and animates the content. The content within is duplicated to create a seamless scrolling effect.",
      "style": {
        "display": "flex",
        "white-space": "nowrap"
      },
      "animation": {
        "name": "marqueeScroll",
        "duration": "15s",
        "timing_function": "linear",
        "iteration_count": "infinite",
        "keyframes": {
          "from": {
            "transform": "translateX(0%)"
          },
          "to": {
            "transform": "translateX(-50%)"
          }
        }
      }
    },
    "content": {
      "description": "The content that is scrolled. It consists of an emoji and text, repeated to fill the animation wrapper.",
      "items": [
        {
          "type": "text_block",
          "value": "üçÄ THE ORIGINAL 4CHAN BULL",
          "style": {
            "fontFamily": "Impact, Arial Black, sans-serif",
            "fontWeight": "bold",
            "fontSize": "26px",
            "color": "black",
            "textTransform": "uppercase",
            "padding": "0 15px"
          }
        }
      ]
    }
  }
}